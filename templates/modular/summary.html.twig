
      <div class="modular-row summary">
            <div class="summary-titel" style="align-items: flex-start;width:auto;height:auto;">
                    <h2>{{ content }}</h2>
                </div>
                
        {% for post in taxonomy.findTaxonomy({'category':['Post','ccna']},'or').order('date', 'desc').slice(0, 10) %}
              <div style="border-bottom: 1px solid grey;border-bottom-style: dotted;  overflow: hidden;">
                  <strong>
                      <span style="float: left;">
                          <a href="{{ post.url }}">{{ post.title}}</a>
                      </span>
                      <span class="date" style="float: right;">{{ post.date|date("Y-m-d") }}</span>
                  </strong>
               </div>
          {% endfor %}
      </div>
  <script>
          $(document).ready(function() {
              if ($(window).width() < 750) {
                  $('.date').hide();
              } else {
                  $('.date').show();
              }
          });
          $(window).resize(function() {
              if ($(window).width() < 750) {
                  $('.date').hide();
              } else {
                  $('.date').show();
              }
          });
          </script>