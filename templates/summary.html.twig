{% extends 'partials/base.html.twig' %}
{% block content %}
    <div class="list-item" style="align-items: flex-start;width:auto;height:auto;">
        <h2>Recent posts...</h2>
    </div>
    <div class="summary" style="align-items: flex-start;margin:auto;">
        <div class="recent-posts" style="text-align:left;">
            {% for post in taxonomy.findTaxonomy({'category':['How-To','ccna','blog']},'or').order('date', 'desc').slice(0, 20) %}
                <div style="border-bottom: 1px solid grey;border-bottom-style: dotted; overflow:auto;">
                    <strong>
                        <span style="float: left;">
                            <a href="{{ post.url }}">{{ post.title}}</a>
                        </span>
                        <span class="date" style="float: right;">{{ post.date|date("Y-m-d") }}</span>
                    </strong>
                </div>
            {% endfor %}
    </ul>
</div>
</div>
{% endblock %}

